__author__ = 'defrance'

# This Python file uses the following encoding: utf-8

import simplekml
from tools import data
from Spectracom import get_data





## File opening ##
kml = simplekml.Kml()


## Trajectory of the receiver given by ublox data ##

# Ublox position matrix
P = data('ublox_data.txt')
# Path creation
lin1 = kml.newlinestring(name="Ublox", description="Ublox trajectory")
# Coordinates of all the points of the path
list = []
for i in range(len(P)):
    Q = [P[i][2],P[i][1]]
    list.append(Q)
lin1.coords = list
# Path style
lin1.style.linestyle.color = simplekml.Color.red
lin1.style.linestyle.width = 3


## Trajectory of the scenario given by spectracom data ##

# Spectracom position matrix
P = get_data('00:00:05')
# Path creation
lin2 = kml.newlinestring(name="Spectracom", description="Spectracom scenario")
# Coordinates of all the points of the path
list = []
for i in range(len(P)):
    Q = [P[i][2],P[i][1]]
    list.append(Q)
lin2.coords = list
# Path style
lin2.style.linestyle.color = simplekml.Color.blue
lin2.style.linestyle.width = 3


## File creation ##
kml.save("testkml.kml")
